{
    "name": "roukmoute/dto-tester",
    "description": "Add PHPUnit extension for testing DTOs and Transfer Objects",
    "type": "library",
    "keywords": ["test", "tests", "testing", "DTO"],
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.4||^9.1",
        "roave/better-reflection": "^3.5||^4.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "pedrotroller/php-cs-custom-fixer": "^2.23",
        "phpspec/phpspec": "^6.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mathias STRASSER",
            "email": "contact@roukmoute.fr"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "DtoTester\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPUnit\\": "tests/PHPUnit",
            "Spec\\": "tests/Spec"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
